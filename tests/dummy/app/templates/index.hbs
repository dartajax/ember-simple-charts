<header class="header">
  <h1>Ember Simple Charts</h1>
  <p>Some simple charts you can use in your email app.</p>
</header>

<div class='ember-simple-charts-wrapper'>
  <div class="panel">
    {{simple-chart height=250 width=250 name='donut' data=chartData.chart.donut}}

    {{#link-to 'chart-donut'}}Detail{{/link-to}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='pie' data=chartData.pie}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='bar' data=chartData.bar}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='horz-bar' data=chartData.horz}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='line' data=chartData.line}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='stacked-bar' data=chartData.stacked}}
  </div>
  <div class="panel">
    {{simple-chart height=250 width=250 name='legend' data=chartData.legend}}
  </div>
</div>

<footer class="footer"></footer>
